{
	"$schema": "./node_modules/@lunariajs/core/config.schema.json",
	"repository": {
		"name": "tgoHQ/knowledgebase",
		"hosting": "github"
	},
	"defaultLocale": { "label": "English", "lang": "en" },
	"locales": [
		{
			"label": "Español",
			"lang": "es"
		},
		{
			"label": "Français",
			"lang": "fr"
		},
		{
			"label": "简体中文",
			"lang": "zh-cn"
		}
	],
	"files": [
		{
			"location": "src/content/docs/**/*.{md,mdx}",
			"pattern": "src/content/docs/@path",
			"type": "universal"
		}
	],
	"dashboard": {
		"favicon": {
			"external": [
				{
					"link": "https://thegreatoutdoors.guide/favicon.svg",
					"type": "image/svg"
				}
			]
		},
		"site": "https://thegreatoutdoors.guide/lunaria",
		"title": "Translation Status | The Great Outdoors",
		"description": "Localization status dashboard for thegreatoutdoors.guide"
	},
	"outDir": "./dist/translation"
}
